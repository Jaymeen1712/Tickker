{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "env": ["AUTH_SECRET", "DATABASE_URL"],
      "dependsOn": ["^build", "^generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "store-front#build": {
      "dependsOn": ["^build", "^generate"],
      "env": ["AUTH_SECRET", "AUTH_TRUST_HOST", "NEXTAUTH_URL", "DATABASE_URL"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "admin#build": {
      "dependsOn": ["^build", "^generate"],
      "env": ["AUTH_SECRET", "DATABASE_URL"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "generate": {
      "cache": true,
      "dependsOn": ["^generate"],
      "outputs": ["node_modules/.prisma/client/**", "dist/**"]
    },
    "prisma": {
      "cache": false,
      "outputs": ["node_modules/.prisma/client"]
    },
    "lint": {
      "cache": true,
      "dependsOn": ["^lint"],
      "inputs": ["$TURBO_DEFAULT$", ".eslintrc*", "eslint.config.*"]
    },
    "type-check": {
      "cache": true,
      "dependsOn": ["^type-check", "^generate"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig*.json"]
    },
    "test": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "jest.config.*", "vitest.config.*"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^generate"]
    },
    "clean": {
      "cache": false
    }
  }
}
